pipeline {
  environment {
    registry = '900417077879.dkr.ecr.us-east-1.amazonaws.com/test2'
    registryCredential = 'aws-cred'
    dockerImage = ''
  }
  agent any
  stages {



  	stage('Checkout Source') {
      steps {
        git url:'https://github.com/JahanzebKhan98/aws-deploy-python.git', branch:'main'
      }
    }

    
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Pushing image to ECR') {
        steps{
            script{
                docker.withRegistry("https://" + registry, "ecr:us-east-1:" + registryCredential) {
                    dockerImage.push()
                }
            }
        }
    }
    
     
    stage('Pulling to ECR') {
     steps{  
         script {
                docker.withRegistry("https://" + registry, "ecr:us-east-1:" + registryCredential) {
                    dockerImage.pull()
             
             
          }
        }
      }
      }
      
      
   stage('Deploy App') {
        steps {
          script {
            kubernetesDeploy(configs: "deployment.yaml", kubeconfigId: "mykubeconfig1")
          }
        }
      }
      
      
  }
}
